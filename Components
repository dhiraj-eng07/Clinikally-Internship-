// components/ProductList.js
import React from 'react';
import { FlatList, View, Text, TouchableOpacity, StyleSheet } from 'react-native';
import { products } from '../data/products';

const ProductList = ({ onSelectProduct, selectedProduct }) => {
  const renderItem = ({ item }) => (
    <TouchableOpacity
      style={[
        styles.productItem,
        selectedProduct?.id === item.id && styles.selectedItem
      ]}
      onPress={() => onSelectProduct(item)}
    >
      <Text style={styles.productName}>{item.name}</Text>
      <Text style={styles.productPrice}>â‚¹{item.price}</Text>
      <Text style={styles.stockStatus}>
        {item.inStock ? 'In Stock' : 'Out of Stock'}
      </Text>
    </TouchableOpacity>
  );

  return (
    <FlatList
      data={products}
      renderItem={renderItem}
      keyExtractor={item => item.id.toString()}
      initialNumToRender={10}
      maxToRenderPerBatch={10}
      windowSize={5}
    />
  );
};

const styles = StyleSheet.create({
  productItem: {
    padding: 16,
    borderBottomWidth: 1,
    borderBottomColor: '#eee',
  },
  selectedItem: {
    backgroundColor: '#e3f2fd',
  },
  productName: {
    fontSize: 16,
    fontWeight: 'bold',
  },
  productPrice: {
    fontSize: 14,
    color: '#666',
  },
  stockStatus: {
    fontSize: 12,
    color: '#4CAF50',
  },
});

export default ProductList;

// components/PincodeInput.js
import React from 'react';
import { View, TextInput, Button, StyleSheet } from 'react-native';

const PincodeInput = ({ value, onChangeText, onSubmit }) => {
  return (
    <View style={styles.container}>
      <TextInput
        style={styles.input}
        value={value}
        onChangeText={onChangeText}
        placeholder="Enter Pincode"
        keyboardType="numeric"
        maxLength={6}
      />
      <Button title="Check Delivery" onPress={onSubmit} />
    </View>
  );
};

const styles = StyleSheet.create({
  container: {
    padding: 16,
  },
  input: {
    borderWidth: 1,
    borderColor: '#ddd',
    padding: 8,
    marginBottom: 16,
    borderRadius: 4,
  },
});

export default PincodeInput;

// components/DeliveryEstimate.js
import React from 'react';
import { View, Text, StyleSheet } from 'react-native';
import DeliveryTimer from './DeliveryTimer';

const DeliveryEstimate = ({ deliveryInfo }) => {
  return (
    <View style={styles.container}>
      <Text style={styles.date}>
        Estimated Delivery: {deliveryInfo.estimatedDate}
      </Text>
      {deliveryInfo.provider === 'Provider A' && (
        <DeliveryTimer cutoffTime="17:00" />
      )}
      {deliveryInfo.provider === 'Provider B' && (
        <DeliveryTimer cutoffTime="09:00" />
      )}
    </View>
  );
};

const styles = StyleSheet.create({
  container: {
    padding: 16,
    backgroundColor: '#f5f5f5',
    borderRadius: 4,
  },
  date: {
    fontSize: 16,
    fontWeight: 'bold',
  },
});

export default DeliveryEstimate;
